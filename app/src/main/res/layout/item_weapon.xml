<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="@color/purple_700"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/weaponName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Iron Sword"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/weaponType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sword"
                    android:textColor="@color/teal_200"
                    android:textSize="14sp"
                    android:layout_marginEnd="16dp" />

                <TextView
                    android:id="@+id/weaponMight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mt: 5"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:layout_marginEnd="16dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/weaponDurability"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Uses: 30/30"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/weaponEquipped"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[Equipped]"
                android:textColor="@color/teal_200"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginTop="4dp"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <Button
                android:id="@+id/btnEquipWeapon"
                style="@style/GameButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Equip"
                android:textSize="12sp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp" />

            <Button
                android:id="@+id/btnDropWeapon"
                style="@style/GameButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Drop"
                android:textSize="12sp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
