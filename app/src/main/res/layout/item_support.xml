<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@color/dark_gray"
    android:layout_marginBottom="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/supportPartnerName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/unit_2"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/supportRank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/support_rank"
            android:textColor="@color/teal_200"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/supportBonuses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/support_bonuses"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/supportRange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Active when adjacent"
        android:textColor="@color/teal_200"
        android:textSize="12sp"
        android:layout_marginTop="2dp" />

</LinearLayout>
