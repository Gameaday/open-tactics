<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="@color/black">

    <!-- Source item -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="8dp"
        android:background="@color/dark_gray">

        <TextView
            android:id="@+id/sourceItemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/item_name"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/sourceItemType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/weapon_type"
            android:textColor="@color/teal_200"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/sourceItemUses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/uses_label"
            android:textColor="@color/white"
            android:textSize="12sp" />

    </LinearLayout>

    <Button
        android:id="@+id/btnTradeItem"
        style="@style/GameButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginHorizontal="8dp"
        android:text="@string/arrow_right"
        android:minWidth="48dp" />

    <!-- Target item (shows empty if target has no item at this position) -->
    <LinearLayout
        android:id="@+id/targetItemLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="8dp"
        android:background="@color/dark_gray">

        <TextView
            android:id="@+id/targetItemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/empty_slot"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/targetItemType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/weapon_type"
            android:textColor="@color/teal_200"
            android:textSize="12sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/targetItemUses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/uses_label"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>
