<?xml version="1.0" encoding="UTF-8"?>
<suppressions xmlns="https://jeremylong.github.io/DependencyCheck/dependency-suppression.1.3.xsd">
    <!-- Suppress false positives for Android SDK components -->
    <suppress>
        <notes><![CDATA[
        Android SDK components often have CVEs that don't apply to Android app context
        ]]></notes>
        <packageUrl regex="true">^pkg:maven/com\.android\..*</packageUrl>
        <cve>CVE-2020-8908</cve>
    </suppress>
    
    <!-- Suppress test-only dependencies -->
    <suppress>
        <notes><![CDATA[
        Test dependencies don't impact production builds
        ]]></notes>
        <packageUrl regex="true">^pkg:maven/org\.mockito/.*</packageUrl>
    </suppress>
    
    <suppress>
        <notes><![CDATA[
        Test dependencies don't impact production builds
        ]]></notes>
        <packageUrl regex="true">^pkg:maven/org\.robolectric/.*</packageUrl>
    </suppress>
    
    <!-- Suppress Kotlin stdlib issues that are handled by R8/ProGuard -->
    <suppress>
        <notes><![CDATA[
        Kotlin stdlib issues handled by build system
        ]]></notes>
        <packageUrl regex="true">^pkg:maven/org\.jetbrains\.kotlin/.*</packageUrl>
        <cve>CVE-2020-29582</cve>
    </suppress>
</suppressions>